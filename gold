#!/usr/bin/env bash
here=$(cd $( dirname "${BASH_SOURCE[0]}" ) && pwd )
chmod +x $here/gold

alias gold="sh $here/gold "

want=$here/src/lib/oo.md
mkdir -p $(dirname $want)
[ -f "$want" ] || cat<<'EOF'>$want
```awk
BEGIN                { List(GOLD) ; DOT=sprintf("%c",46) }
function has(i,f,k)  { return has0(i, f?f:"List", k?k:1+length(i[k])) }
function has0(i,f,k) { i[k][0]; @f(i[k]); delete i[k][0]; return k }
function List(i)     { split("",i,"") }
function Object(i)   { List(i); i.id = ++GOLD.id }
```
EOF

for f in $(find $here/src  -type f  -name '*.md'); do
  g=${f%.*}.awk
  if [ "$f" -nt "$g" ]; then
    #echo -n "."  2>&1
    cat $f | gawk -v Slash="$(dirname $f)" '
      BEGIN            { Comment="#" }
      sub(/```awk/,"") { Comment=""  ; print; next}
      sub(/```/,"")    { Comment="# "; print; next}
      sub(/@include "\//,"@include \""Slash"/") { print $0; next }
      /^function[ \t]+[A-Z][^\(]*\(/ {
          split($0,a,/[ \t\(]/)
          PREFIX = a[2]
      }
      { gsub(/ _/," " PREFIX "_",$0)
        print Comment gensub( /\.([^0-9\\*\\$\\+])([a-zA-Z0-9_]*)/, 
                              "[\"\\1\\2\"]","g", $0)
      }' > $g
  fi
done

toc() { cat $1 | gawk '
BEGIN{ print("<details open><summary>Table of Contents</summary>\n") }
function ns(n,    s) { while(n-- > 0) s= s "  "      ; return s}
function trim(s)     { gsub(/(^[ \t]*|[ \t]*$)/,"",s); return s}
/^##[#]+/ { 
   indent = length($1)-3
   $1=""
   link=text = trim($0)
   gsub(/[ \t]+/,"",link)
   getline; 
   if(help=$0) print ns(indent) "- ["text"](#"tolower(link)") : " help 
}
END {print "";print "</details>"}
'
}

if [ "$1" == "-t" ]; then
   toc $2
   exit 0
elif [ -n "$1" ]; then
  g=${f%.*}.awk
  shift
  if [ -t 1 ]
  then         gawk -f $g $*
  else cat - | gawk -f $g $*
  fi
fi
